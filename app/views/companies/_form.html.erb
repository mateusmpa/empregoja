<%= flash[:error] %>
<%= form_for @company, html: { class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :location, class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :location, class: "form-control", placeholder: "Location" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :phone, class: "form-control", placeholder: "Phone" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :mail, class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :mail, class: "form-control", placeholder: "Mail" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit submit_label, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
